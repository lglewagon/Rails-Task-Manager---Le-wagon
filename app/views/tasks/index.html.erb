<h1>My Tasks</h1>
<ul> 
    <%@tasks.each do |task|%>
    <li>
    <%= "CheckBox" %> 
    <%= link_to(task.title, task_path(task)) %> 
    <%= link_to("Supprimer",
     task_path(task),
     method: :delete,
     data: { confirm: 'Are you sure ?'}) %>
    </li>
    <%end%>
</ul>

